{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/posts", "dest": "/api/index.js" },
    { "src": "/users", "dest": "/api/index.js" },
    { "src": "/comments", "dest": "/api/index.js" },
    { "src": "/webhooks", "dest": "/api/index.js" }
  ]
}
